@model OldBLOG.Models.HomeViewModels.AuthorViewModel
@using PagedList.Core.Mvc
@{
	Layout = "_HomeLayout";
	ViewData["HeaderImage"] = $"../../UserFiles/Users/{Model.Author.Id}/HeaderImage.jpg";
	ViewData["HeaderTitle"] = $"{Model.Author.FirstName} {Model.Author.LastName}";
	ViewData["SubHeader"] = Model.Author.SubHeader;
}

<article>
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-md-10 mx-auto">
				@Html.Raw(Model.Author.AboutContent)
			</div>
		</div>
		<div class="row">
			<div class="col-lg-8 col-md-10 mx-auto">
				
				<!-- Search bar -->
				<div class="row justify-content-center mb-4">
					<div class="col-md-6 text-center">
						<form asp-controller="Home" asp-action="Author" class="form-inline justify-content-center">
							<input name="AuthorId" hidden readonly value="@Model.Author.Id" />
							<input asp-for="SearchString" type="text" class="form-control mr-sm-2" placeholder="Search posts for..." />
							<button type="submit" class="btn btn-outline-success ml-sm-2" style="margin-top: 10px; padding-top: 10px; padding-bottom: 10px; background-color: greenyellow">Search</button>
						</form>
					</div>
				</div>

				<div class="row align-content-center">
					@foreach (var post in Model.Posts)
					{
						<div class="col-lg-4 col-md-3 mb-4">
							<div class="card border-0 shadow">
								<img src="~/UserFiles/Posts/@post.Id/HeaderImage.jpg" class="card-img-top" />
								<div class="card-body">
									<div class="row text-center" style="margin: 0px auto 10px 0px;">
										<h5 class="card-title text-center w-100"><a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">@post.Title</a></h5>
									</div>
								</div>
							</div>
						</div>
					}
				</div>
				<pager class="pager-container" list="@Model.Posts" options="@PagedListRenderOptions.Bootstrap4PageNumbersPlusPrevAndNext" asp-action="Index" asp-controller="Home" asp-route-query="@Model.SearchString"></pager>
			</div>
		</div>
	</div>
</article>

