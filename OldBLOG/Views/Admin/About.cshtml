@model OldBLOG.Models.AdminViewModels.AboutViewModel

<!--section Styles{
	<link rel="stylesheet" href="~/css/content-styles.css" type="text/css">
}-->

<div class="container-fluid">
	<h1 class="mt-4">About Me</h1>
	<div class="row">
		<div class="col-lg-7">
			<!--class="col-lg-6"-->
			<div class="card mb-4">
				<form asp-controller="Admin" asp-action="UpdateAbout" method="post" enctype="multipart/form-data">
					<div class="card-header">
						<i class="fas fa-pen-fancy mr-1"></i>
						Update your About Me info
					</div>
					<div class="card-body">
						<!--Upload Image-->
						<div class="form-group" style="margin-bottom: 10px;">
							<label asp-for="HeaderImage"></label>
							<div class="custom-file">
								<input asp-for="HeaderImage" class="custom-file-input" accept="image/*" />
								<!--<label class="custom-file-label"></label>-->
							</div>
							<span asp-validation-for="HeaderImage" class="text-danger"></span>
						</div>

						<div class="form-group" style="margin-bottom: 10px;">
							<label asp-for="SubHeader"></label>
							<input asp-for="SubHeader" class="form-control" />
						</div>

						<div class="form-group" style="margin-bottom: 10px;">
							<label asp-for="Content"></label>
							<textarea asp-for="Content" class="form-control textarea" rows="16"></textarea>
							<span asp-validation-for="Content" class="text-danger"></span>
						</div>

					</div>
					<div class="card-footer">
						<div class="form-group">
							<button class="btn btn-primary" type="submit">Submit</button>
							<a asp-controller="Home" asp-action="Author" asp-route-authorId="@Model.ApplicationUser.Id" class="btn btn-secondary float-right">View</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


