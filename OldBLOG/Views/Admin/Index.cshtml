@model OldBLOG.Models.AdminViewModels.IndexViewModel
<div class="container-fluid">
	<h1 class="mt-4">Dashboard</h1>
	<ol class="breadcrumb mb-4">
		<li class="breadcrumb-item active">Dashboard</li>
	</ol>
	<div class="row">
		@foreach (var blog in Model.Blogs)
		{
			<div class="col-xl-4 col-md-6 mb-4">
				<div class="card border-0 shadow">
					<img src="~/UserFiles/Blogs/@blog.Id/HeaderImage.jpg" class="card-img-top" />
					
					<div class="card-body">
						<div><h5 class="card-title mb-0">@blog.Title</h5></div>
						<div class="d-flex justify-content-end">
							<i class="fas @(blog.Published ? "fa-eye" : "fa-eye-slash")" style="color: @(blog.Published ? "deepskyblue" : "orangered")"></i>
						</div>

						<div class="d-flex justify-content-between ml-0">
							<div>
								<span><i class="fas fa-calendar-alt" style="color: gray"></i></span>
								<p class="text-muted d-inline-block mb-0" style="margin-left: 20px;">Last updated on: @blog.UpdatedOn.ToString()</p>
							</div>
						</div>

						<div class="d-flex justify-content-between ml-0">
							<div>
								<span><i class="fas fa-comment" style="color: gray"></i></span>
								<p class="text-muted mb-0 d-inline-block" style="margin-left: 20px;">@blog.Posts.Count() comment(s)</p>
							</div>
						</div>

					</div>

					<div class="card-footer">
						<div class="row">
							<div class="col">
								<a asp-controller="Home" asp-action="Blog" asp-route-id="@blog.Id" class="btn btn-primary">
									<i class="fa fa-arrow-circle-right"></i> View
								</a>
							</div>

							<div class="col">
								<a asp-controller="Blog" asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-secondary">
									<i class="fa fa-edit"></i> Edit
								</a>
							</div>

							<div class="col">
								<a asp-controller="Blog" asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-danger float-right">
									<i class="fa fa-trash"></i> Delete
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div>