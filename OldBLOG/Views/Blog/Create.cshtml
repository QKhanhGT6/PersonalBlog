@model OldBLOG.Models.BlogViewModels.CreateViewModel

@section Styles{
	<link rel="stylesheet" href="~/css/content-styles.css" type="text/css">
}

<div class="container-fluid">
	<h1 class="mt-4">Create</h1>
	<div class="row">
		<div class="col-lg-7">  <!--class="col-lg-6"-->
			<div class="card mb-4">
				<form asp-controller="Blog" asp-action="Add" method="post" enctype="multipart/form-data">
					<div class="card-header">
						<i class="fas fa-pen-fancy mr-1"></i>
						Write a Post
					</div>
					<div class="card-body">
						<!--Upload Image-->
						<div class="form-group" style="margin-bottom: 10px;">
							<label asp-for="BlogHeaderImage"></label>
							<div class="custom-file">
								<input asp-for="BlogHeaderImage" class="custom-file-input" accept="image/*" />
								<!--<label class="custom-file-label"></label>-->
							</div>
							<span asp-validation-for="BlogHeaderImage" class="text-danger"></span>
						</div>

						<div class="form-group" style="margin-bottom: 10px;">
							<label asp-for="Blog.Title"></label>
							<input asp-for="Blog.Title" class="form-control" required/>
							<span asp-validation-for="Blog.Title" class="text-danger"></span>
						</div>	
							
						<div class="form-group" style="margin-bottom: 10px;">
							<label asp-for="Blog.Content"></label>
							<textarea asp-for="Blog.Content" class="form-control textarea" rows="16"></textarea>
							<span asp-validation-for="Blog.Content" class="text-danger"></span>
						</div>
						
					</div>
					<div class="card-footer">
						<div class="form-group">
							<p class="text-muted">Publish now or save for later edits</p>
							<label>Publish now?</label>
							<input type="checkbox" data-toggle="toggle" asp-for="Blog.Published"/>
							</br>
							<div class="d-flex justify-content-center">
								<button class="btn btn-primary" type="submit">Submit</button>
							</div>

						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


